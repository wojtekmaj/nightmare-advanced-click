{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": "airbnb-base",
  "rules": {
    "prefer-destructuring": "warn",
    "prefer-spread": "warn"
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/__tests__/*"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
